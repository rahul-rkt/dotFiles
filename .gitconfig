[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f

[user]
	name = Rahul Thakur
	email = rahul.rkt@gmail.com

[core]
	excludesfile = /Users/rahulthakur/.gitignore_global

[color]
 	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = green     # Items that have been added to the index
	changed = yellow  # Items that have been changed, but not added to the index
	untracked = red   # Items that are untracked

[fetch]
	prune = true

[merge]
	ff = true

[push]
	default = current

[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
